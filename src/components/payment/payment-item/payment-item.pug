mixin payment-item(options)
    div(class='col-lg-3 col-md-6 col-sm-6 col-xs-12')
        div.d-flex.payment-item
            div.payment-item__left
                img(src=options.img)
            div.payment-item__right
                h3.payment-item__title=options.title
                p.payment-item__text=options.text
