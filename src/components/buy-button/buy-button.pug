mixin buy-button(options)    if (options.oneClick)        -var needButton= "button-add-in-one-click"        -var needIcon= "far fa-hand-pointer"    else        -var needButton= "button-add-in-cart"        -var needIcon= "fas fa-cart-plus"    button(class= needButton + " " + needButton + "__" + options.class).btn.btn-success        span(class= needButton + "__text").mr-2= options.oneClick ? 'Купить в 1 клик' : 'Добавить в корзину'        i(class= needButton + "__icon " + needIcon)